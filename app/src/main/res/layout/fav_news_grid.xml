<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fav_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    app:cardBackgroundColor="#FAFAFA"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/fav_grid_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="center"
                android:contentDescription="@string/fav_image"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5000" />

            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                android:id="@+id/fav_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mfb_animate_favorite="true"
                app:mfb_animate_unfavorite="false"
                app:mfb_bounce_duration="300"
                app:mfb_color="black"
                app:mfb_favorite_image="@drawable/ic_bookmark_black_24dp"
                app:mfb_not_favorite_image="@drawable/ic_bookmark_border_black_24dp"
                app:mfb_padding="12"
                app:mfb_rotation_angle="360"
                app:mfb_rotation_duration="400"
                app:mfb_type="star" />

        </FrameLayout>

        <TextView
            android:id="@+id/fav_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="5"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>

